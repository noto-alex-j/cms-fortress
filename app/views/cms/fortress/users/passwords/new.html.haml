.page-center
  .page-center-in
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form', class: 'form-reset-password sign-box' }) do |f|
      %h4= t('login.forgot_your_password')
      %p Enter your email address and your password will be reset and email to you.
      = devise_error_messages!
      .form-group
        = f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('cms.fortress.users.sessions.new.email_address')
    
      = f.submit t('login.send_me_reset_password_instructions'), class: 'btn btn-success rounded btn-lg'